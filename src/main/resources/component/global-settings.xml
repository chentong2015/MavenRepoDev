<settings>
    <pluginGroups>
        <pluginGroup>ctong.maven.plugins</pluginGroup>
    </pluginGroups>
    
    <mirrors>
        <mirror>
            <mirrorOf>central</mirrorOf>
            <id>publicGroupProxy</id>
            <name>Proximity mirrored central repository in group public</name>
            <url>https://pandora.fr.ctong.com/content/groups/public</url>
        </mirror>
		<mirror>
            <mirrorOf>jboss-public-repository-group</mirrorOf>
            <id>jbossProxy</id>
            <name>Proximity mirrored jboss repository in group public</name>
            <url>https://pandora.fr.ctong.com/content/groups/public/</url>
        </mirror>
		<mirror>
            <id>releases-java-net-http-blocker</id>
            <mirrorOf>releases.java.net</mirrorOf>
            <name>releases.java.net</name>
            <url>http://maven.java.net/content/repositories/releases/</url>
            <blocked>true</blocked>
        </mirror>
        <mirror>
            <id>jvnet-nexus-staging-blocker</id>
            <mirrorOf>jvnet-nexus-staging</mirrorOf>
            <name>jvnet-nexus-staging</name>
            <url>http://maven.java.net/content/repositories/staging/</url>
            <blocked>true</blocked>
        </mirror>
        <mirror>
            <id>jvnet-nexus-snapshots-blocker</id>
            <mirrorOf>jvnet-nexus-snapshots</mirrorOf>
            <name>jvnet-nexus-snapshots</name>
            <url>http://maven.java.net/content/repositories/snapshots/</url>
            <blocked>true</blocked>
        </mirror>
		<mirror>
			<id>sonatype.snapshots</id>
			<mirrorOf>sonatype-snapshots</mirrorOf>
			<name>oss.sonatype</name>
			<url>https://oss.sonatype.org/content/repositories/snapshots/</url>
			<blocked>true</blocked>
		</mirror>
		<mirror>
			<id>rubygems-releases</id>
			<mirrorOf>rubygems-releases</mirrorOf>
			<name>rubygems-releases</name>
			<url>https://otto.takari.io/content/repositories/rubygems</url>
			<blocked>true</blocked>
		</mirror>
	</mirrors>

	<profiles>
		<profile>
			<id>production-repositories</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<repositories>
				<repository>
					<id>production-ctong-repository</id>
					<url>https://pandora.fr.ctong.com/content/groups/ctong</url>
				</repository>
				<repository>
					<id>production-public-repository</id>
					<url>https://pandora.fr.ctong.com/content/groups/public</url>
				</repository>
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>production-ctong-repository</id>
					<url>https://pandora.fr.ctong.com/content/groups/ctong</url>
				</pluginRepository>
				<pluginRepository>
					<id>production-public-repository</id>
					<url>https://pandora.fr.ctong.com/content/groups/public</url>
				</pluginRepository>
			</pluginRepositories>
		</profile>

		<profile>
			<id>development-repositories</id>
			<activation>
				<property>
					<name>useDevMavenRepo</name>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>development-ctong-repository</id>
					<url>http://repo-dev/nexus/content/groups/ctong</url>
				</repository>
				<repository>
					<id>development-public-repository</id>
					<url>http://repo-dev/nexus/content/groups/public</url>
				</repository>
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>development-ctong-repository</id>
					<url>http://repo-dev/nexus/content/groups/ctong</url>
				</pluginRepository>
				<pluginRepository>
					<id>development-public-repository</id>
					<url>http://repo-dev/nexus/content/groups/public</url>
				</pluginRepository>
			</pluginRepositories>
		</profile>

		<profile>
            <id>staging-repositories</id>
            <activation>
                <property>
                    <name>useStaging</name>
                </property>
            </activation>
            <repositories>
                <repository>
                    <id>nexus-ctong</id>
                    <url>https://pandora.fr.ctong.com/content/groups/pre-prod-staging</url>
                </repository>
                <repository>
                    <id>nexus-public</id>
                    <url>https://pandora.fr.ctong.com/content/groups/public</url>
                </repository>
                <repository>
                    <id>nexus-firstretry</id>
                    <url>https://pandora.fr.ctong.com/content/groups/firstretry</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>nexus-ctong-plugin</id>
                    <url>https://pandora.fr.ctong.com/content/groups/ctong</url>
                </pluginRepository>
                <pluginRepository>
                    <id>nexus-public</id>
                    <url>https://pandora.fr.ctong.com/content/groups/public</url>
                </pluginRepository>
                <pluginRepository>
                    <id>nexus-firstretry</id>
                    <url>https://pandora.fr.ctong.com/content/groups/firstretry</url>
                </pluginRepository>
                <pluginRepository>
                    <id>nexus-ctong</id>
                    <url>https://pandora.fr.ctong.com/content/groups/pre-prod-staging</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>

		<profile>
			<id>onyx</id>
			<activation>
				<property>
					<name>useOnyxMavenRepo</name>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>onyx</id>
					<name>Onyx</name>
					<url>http://ci-onyx:8081/nexus/content/groups/onyx/</url>
					<snapshots>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>	
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>onyx-plugin</id>
					<url>http://ci-onyx:8081/nexus/content/groups/onyx/</url>
					<snapshots>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</pluginRepository>			
			</pluginRepositories>
		</profile>

		<profile>
			<id>mx-artifacts</id>
			<activation>
				<property>
					<name>useMXArtifactsMavenRepo</name>
				</property>
			</activation>
			<repositories>
				<repository>
					<id>mx-artifacts</id>
					<name>mx-artifacts</name>
					<url>http://nexus-dev/nexus/content/groups/mx-artifacts/</url>
					<layout>default</layout>
					<releases>
						<updatePolicy>always</updatePolicy>
					</releases>
				</repository>
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>mx-artifacts-plugin</id>
					<url>http://nexus-dev/nexus/content/groups/mx-artifacts/</url>		
					<releases>
						<updatePolicy>always</updatePolicy>
					</releases>
				</pluginRepository>
			</pluginRepositories>
		</profile>

		<profile>
            <id>bpm-only-jars</id>
            <activation>
                <property>
					<name>bpm-only-jars</name>
				</property>
            </activation>
            <repositories>
                <repository>
                    <id>production-nexus-bpm-3p</id>
                    <url>https://pandora.fr.ctong.com/content/repositories/bpm.3p/</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>production-nexus-bpm-3p</id>
                    <url>https://pandora.fr.ctong.com/content/repositories/bpm.3p/</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
	
	<servers>
		<server>
			<id>deploy-server</id>
			<username>${deploy.username}</username>
			<password>${deploy.password}</password>
		</server>
	</servers> 

</settings>
